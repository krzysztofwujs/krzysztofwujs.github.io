---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import { getAllPosts, sortMDByDate } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
  <section>
    <h1 class="title mb-6">Hello there!.</h1>
    <p class="mb-4">
      I'm a technical PM, writer, and analyst with a strong passion for building
      high-value, user-centric products. I believe in data privacy and open
      source solutions, driven by a strong interest in human-computer
      interaction.
      <p></p>
      <p>Welcome to my digital garden.</p>
      <p>
        <SocialList />
      </p>
    </p>
    <section aria-label="Blog post list" class="mt-16">
      <h2 class="title mb-4 text-xl">Writing</h2>
      <ul class="space-y-4">
        {
          allPostsByDate.map(p => (
            <li class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
              <PostPreview post={p} />
            </li>
          ))
        }
      </ul>
    </section>
  </section>
</PageLayout>
